<!-- Bootstrap Modal for Progress -->
<div class="modal fade" id="progressModal" tabindex="-1" aria-labelledby="progressModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="progressModalLabel">Progress Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="progress-modal-body">
        <!-- Progress milestones will be inserted here by JavaScript -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const searchInput = document.getElementById('search-input');
    const performanceTable = document.getElementById('performance-table').getElementsByTagName('tbody')[0];
    const progressModalBody = document.getElementById('progress-modal-body');

    function fetchData(query) {
      fetch('search_performance.php?query=' + encodeURIComponent(query))
        .then(response => response.json())
        .then(data => {
          performanceTable.innerHTML = '';

          data.forEach(row => {
            const tr = document.createElement('tr');

            tr.innerHTML = `
              <td>${row.student_name}</td>
              <td>${row.student_email}</td>
              <td>${row.student_phone}</td>
              <td>${row.student_branch}</td>
              <td>${row.job_title}</td>
              <td>${row.job_description}</td>
              <td>${row.job_domain}</td>
              <td>
                <button class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#progressModal" onclick="showProgress(${row.application_id}, ${row.progressPercentage}, '${row.aptitude}', '${row.technical_interview}', '${row.offer_letter}', '${row.placed}', '${row.rejected}', '${row.rejection_reason}')">View Progress</button>
              </td>
              <td><a href="edit_performance.php?id=${row.application_id}" class="btn btn-sm btn-edit">Edit</a></td>
            `;

            performanceTable.appendChild(tr);
          });
        })
        .catch(error => console.error('Error fetching data:', error));
    }

    function showProgress(applicationId, progressPercentage, aptitude, technicalInterview, offerLetter, placed, rejected, rejectionReason) {
      progressModalBody.innerHTML = `
        <div class="progress-bar">
          <div class="progress-line">
            <div class="progress-line-fill" style="width: ${progressPercentage}%"></div>
          </div>
          <div class="milestone ${aptitude === 'completed' ? 'active' : (rejected === 'yes' ? 'rejected' : '')}">
            <div class="milestone-icon">1</div>
            <div class="milestone-title">Aptitude</div>
            <div class="milestone-desc">Aptitude Test</div>
          </div>
          <div class="milestone ${technicalInterview === 'completed' ? 'active' : (rejected === 'yes' ? 'rejected' : '')}">
            <div class="milestone-icon">2</div>
            <div class="milestone-title">Technical Interview</div>
            <div class="milestone-desc">Technical Interview</div>
          </div>
          <div class="milestone ${offerLetter === 'completed' ? 'active' : (rejected === 'yes' ? 'rejected' : '')}">
            <div class="milestone-icon">3</div>
            <div class="milestone-title">Offer Letter</div>
            <div class="milestone-desc">Offer Letter Sent</div>
          </div>
          <div class="milestone ${placed === 'completed' ? 'active' : (rejected === 'yes' ? 'rejected' : '')}">
            <div class="milestone-icon">4</div>
            <div class="milestone-title">Placed</div>
            <div class="milestone-desc">Placed in Company</div>
          </div>
          <div class="milestone ${rejected === 'yes' ? 'rejected' : ''}">
            <div class="milestone-icon">5</div>
            <div class="milestone-title">Rejected</div>
            <div class="milestone-desc">Rejected from Process</div>
            <div class="tooltip">${rejectionReason}</div>
          </div>
        </div>
      `;
    }

    searchInput.addEventListener('input', function () {
      fetchData(searchInput.value);
    });

    // Initial load
    fetchData('');
  });
</script>

    <style>
      .table th, .table td {
    text-align: center;
    white-space: nowrap;
}

.table th:nth-child(1), .table td:nth-child(1) { width: 15%; }  /* Student Name */
.table th:nth-child(2), .table td:nth-child(2) { width: 15%; }  /* Email */
.table th:nth-child(3), .table td:nth-child(3) { width: 10%; }  /* Phone */
.table th:nth-child(4), .table td:nth-child(4) { width: 10%; }  /* Branch */
.table th:nth-child(5), .table td:nth-child(5) { width: 10%; }  /* Job Title */
.table th:nth-child(6), .table td:nth-child(6) { width: 15%; }  /* Job Description */
.table th:nth-child(7), .table td:nth-child(7) { width: 10%; }  /* Job Domain */
.table th:nth-child(8), .table td:nth-child(8) { width: auto; }  /* Progress */
